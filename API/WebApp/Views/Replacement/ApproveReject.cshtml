
@{
    ViewData["Title"] = "ApproveReject";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

    <div class="content-wrapper">
        <!-- Start Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header no-bd">
                        <h5 class="modal-title"><span class="fw-mediumbold">Replacement Approval</span></h5>
                        <div data-toggle="modal" data-target="#myModal" onclick="ClearScreen();">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <div class="modal-body">
                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr hidden>
                                    <th width="30%">Id</th>
                                    <th>:</th>
                                    <td id="Id"> </td>
                                </tr>
                                <tr>
                                    <th width="30%">Employee</th>
                                    <th>:</th>
                                    <td id="EmployeeOption"> </td>
                                </tr>
                                <tr>
                                    <th>Replacement Reason</th>
                                    <th width="10%">:</th>
                                    <td id="replacement_reason"></td>
                                </tr>
                                <tr>
                                    <th>Site</th>
                                    <th>:</th>
                                    <td id="SiteName"></td>
                                </tr>
                                <tr>
                                    <th>Site Supervisor</th>
                                    <th>:</th>
                                    <td id="SiteSupervisor"></td>
                                </tr>
                                <tr>
                                    <th>Site Address</th>
                                    <th>:</th>
                                    <td id="SiteAddress"></td>
                                </tr>
                                <tr>
                                    <th>Submission Date</th>
                                    <th>:</th>
                                    <td id="CreateDate"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Modal -->
        <!-- START PAGE CONTENT-->
        <div class="page-heading">
            <h1 class="page-title"> Replacement Approval</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html"><i class="la la-home font-20"></i></a>
                </li>

            </ol>
        </div>
        <div class="page-content fade-in-up">
            <div class="ibox">
                @*<div class="ibox-head">
                    <div class="ibox-title">Data Table</div>
                </div>*@
                <div class="ibox-body">
                    @*<a asp-action="Excel" class="btn btn-success pull-right hidden-sm-down fa fa-file-excel-o" data-toggle="tooltip" title="Export Excel"></a>
                    <a asp-action="ExportPdf" class="btn btn-danger pull-right hidden-sm-down fa fa-file-pdf-o" data-toggle="tooltip" title="Export Pdf"></a>*@
                    <table class="table table-striped table-bordered table-hover" id="ReplacementApproval" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Employee</th>
                                <th>Site</th>
                                <th>Replacement Reason</th>
                                <th>Submission Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
        <footer class="page-footer">
            <div class="font-13">2018 © <b>AdminCAST</b> - All rights reserved.</div>
            <div class="to-top"><i class="fa fa-angle-double-up"></i></div>
        </footer>
    </div>

@section Scripts{
    <script src="~/js/Script/ApproveRejectReplacementScript.js"></script>
}

